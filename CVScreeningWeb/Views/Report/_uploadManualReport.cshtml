@using CVScreeningWeb.Helpers
@using CVScreeningWeb.Resources
@using Kendo.Mvc.UI
@model CVScreeningWeb.ViewModels.Report.UploadManualReportViewModel

<script src="/Scripts/kendo/jquery.min.js"></script>
<script src="/Scripts/kendo/kendo.web.min.js"></script>
<script src="/Scripts/kendo/kendo.aspnetmvc.min.js"></script>
<script src="/Content/theme/bs3/js/bootstrap.min.js"></script>
<script src="/Scripts/theme/scripts.js"></script>
<script src="/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="http://malsup.github.com/jquery.form.js"></script>


<div class="modal-dialog">
    <div class="modal-content" id="assign-to-form">
        <div class="modal-header">
            <h4 class="modal-title">@Screening.UploadManualReport</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("UploadManualReport", "Report", FormMethod.Post,
                 new { enctype = "multipart/form-data"}))
            {
                @Html.HiddenFor(m => m.ScreeningId)
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                
                <fieldset>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.Bootstrap().LabelFor(m => m.ManualReport).Class("control-label ")
                        </div>
                        <div class="col-md-8">
                            @(Html.Kendo().Upload().Name("ManualReport").Multiple(false).HtmlAttributes(new {@class = "form-control"}))
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-3 col-md-8">
                            @Html.Bootstrap().SubmitButton().Text(Common.Submit)
                        </div>
                    </div>
                </fieldset>
            }

        </div>

        <div class="modal-footer">
        </div>

    </div>
</div>



<script type="text/javascript">

    $(document).ready(function()
    {
        // Bind modal to event when the window is closed, page is reloaded
        $('#upload-manual-report-modal').on('hidden.bs.modal', function () {
            document.location.reload();
        });
    });
</script>