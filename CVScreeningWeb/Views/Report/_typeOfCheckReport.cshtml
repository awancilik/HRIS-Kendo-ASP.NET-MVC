@model CVScreeningWeb.ViewModels.Report.TypeOfCheckReportViewModel
           
@{
    var typeOfCheckName = Model.TypeOfCheckName;
    if (typeOfCheckName.ToLower().Contains("media check"))
    {
        typeOfCheckName = "Media Check";
    }
    if (typeOfCheckName.ToLower().Contains("education check"))
    {
        typeOfCheckName = "Education Check";
    }
    if (typeOfCheckName.ToLower().Contains("employment check"))
    {
        typeOfCheckName = "Employment Check";
    }
}
<h4>@typeOfCheckName</h4>

@for(int i=0; i< Model.VerificationReports.Count();i++)
{
    var verificationReport = Model.VerificationReports.ElementAt(i);
    var passage = new MvcHtmlString(verificationReport.Passage);

    if (!String.IsNullOrEmpty(verificationReport.Type))
    {
        <label style="font-weight: bold">@verificationReport.Type:</label><br/>
    }
    
    foreach (var line in verificationReport.Lines)
    {
        @line <br/>
    }
    <br/>
    var report = new MvcHtmlString(verificationReport.Passage);
    @report;
    if (i != Model.VerificationReports.Count() - 1)
    {
        <hr/>
        <br/>
    }
}