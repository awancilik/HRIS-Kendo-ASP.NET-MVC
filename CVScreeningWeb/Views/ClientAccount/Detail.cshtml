@using CVScreeningWeb.Helpers
@using CVScreeningWeb.Resources
@model CVScreeningWeb.ViewModels.ClientAccount.ClientAccountFormViewModel

@{
    ViewBag.Title = Common.DetailTitle + " " + ClientAccount.Object;
    ViewBag.PanelClass = CSSHelper.SINGLE_COLUMN_FORM_CLASS;
}

<div class="form-horizontal">
    
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.Email).Class(CSSHelper.LABEL_CONTROL_CLASS)
            <div class=@CSSHelper.INPUT_DIV_CLASS>
                @Html.Bootstrap().TextBoxFor(m => m.Email).Class("form-control").Readonly()
            </div>
        </div>
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.FullName).Class(CSSHelper.LABEL_CONTROL_CLASS)
            <div class=@CSSHelper.INPUT_DIV_CLASS>
                @Html.Bootstrap().TextBoxFor(m => m.FullName).Class("form-control").Readonly()
            </div>
        </div>
        @Html.DisplayFor(m=> m.ClientCompany)
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.Position).Class(CSSHelper.LABEL_CONTROL_CLASS)
            <div class=@CSSHelper.INPUT_DIV_CLASS>
                @Html.Bootstrap().TextBoxFor(m => m.Position).Class("form-control").Readonly()
            </div>
        </div>
        @Html.DisplayFor(m => m.AddressViewModel)
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.Comment).Class(CSSHelper.LABEL_CONTROL_CLASS)
            <div class=@CSSHelper.INPUT_DIV_CLASS>
                @Html.Bootstrap().TextAreaFor(m => m.Comment).Class("form-control").Readonly()
            </div>
        </div>
        @Html.DisplayFor(m => m.HomePhoneNumber)
        @Html.DisplayFor(m => m.MobilePhoneNumber)
        <br />
        <br />
        <div class="form-group">
            <div class="@CSSHelper.BUTTON_CONTROL_CLASS">
                @Html.ActionLink(Common.Ok, "Index", "ClientAccount",
                    null, new {Class = "btn  btn-default"})
            </div>
        </div>
    </fieldset>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style scoped>
    .k-readonly { color: gray; }
</style>