@using CVScreeningWeb.Helpers
@using CVScreeningWeb.Resources
@model CVScreeningWeb.ViewModels.ClientCompany.ClientCompanyFormViewModel

@{
    ViewBag.Title = Common.SubmitTitle + " " + ClientCompany.Object;
    ViewBag.PanelClass = CSSHelper.SINGLE_COLUMN_FORM_CLASS;
    ViewBag.IsKendoEnabled = true;
}

@Html.ValidationSummary()


@using (Html.BeginForm("Create", "ClientCompany", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.IsDeactivated)
    <fieldset>
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.Company).Class(CSSHelper.LABEL_CONTROL_CLASS)
            <div class=@CSSHelper.INPUT_DIV_CLASS>
                @Html.Bootstrap().TextBoxFor(m => m.Company).Class("form-control")
                @Html.ValidationMessageFor(m => m.Company)
            </div>
        </div>
        @Html.EditorFor(m => m.Category)
        @Html.EditorFor(m => m.AddressViewModel)
        @Html.EditorFor(m => m.AccountManagers)
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.Website).Class(CSSHelper.LABEL_CONTROL_CLASS)
            <div class=@CSSHelper.INPUT_DIV_CLASS>
                @Html.Bootstrap().TextBoxFor(m => m.Website).Class("form-control")
                @Html.ValidationMessageFor(m => m.Website)
            </div>
        </div>
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.Description).Class(CSSHelper.LABEL_CONTROL_CLASS)
            <div class=@CSSHelper.INPUT_DIV_CLASS>
                @Html.Bootstrap().TextAreaFor(m => m.Description).Class("form-control").Value(Model.Description)
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
        
        <br />
        <br />
        <div class="form-group">
            <div class=@CSSHelper.BUTTON_CONTROL_CLASS>
                @Html.Bootstrap().SubmitButton().Text(Common.Submit)
                @Html.ActionLink(Common.Cancel, "Index", "ClientCompany", null, new {Class = "btn  btn-default"})
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style scoped>
    .k-readonly { color: gray; }
</style>